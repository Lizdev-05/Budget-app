<%= form_with model: category, url: categories_path, :html => {:class => 'form', :id => 'form' }  do |form| %>
       <div class="field">
        <%= form.text_field :name, autofocus: true, autocomplete: "text", placeholder: "Enter category name", class: 'fs-5 mb-2 form-control'%>
        <% category.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
       <div class="field">
        <%= form.text_field :icon, autofocus: true, placeholder: "Enter category icon url", class: 'form-control' %>
        <% category.errors.full_messages_for(:icon).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

    <div class = 'text-center'>
          <%= form.submit 'Add', class: 'btn bg-primary text-light mt-3 fs-5 mb-2' %>
        <div>
<% end %>

