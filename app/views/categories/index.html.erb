 <section>
<div class = 'container pt-4 '>
     <% if @categories.length > 0 %>
      <ul class="category-lists-wrapper">
          <% @categories.each do |category| %>
           <%= link_to category_path(category.id), method: :get do %> 
          <li>

            <div class = 'd-flex flex-row justify-content-between w-70 '>
            <div><%= image_tag(category.icon, class:'img') %></div>
            <div class = 'container'>
            <div class = 'card border-white'>
            <div class = 'card-body d-flex flex-row justify-content-between'>
            <div class = 'd-flex flex-column'>
                 <p><%= category.name %></p>
                <small><%= category.created_at.to_date.strftime("%d %b, %Y") %></small>
              </div>
                <p class='strong'>$<%= category.businesses.sum(:amount) || '0.00'%></p>
                 </li> 
              </div>
            </div>
            </div>
            
         
          <% end %>
          <% end %>
      </ul>
   <% else %>
          <p>No Category Added yet</p> 
      <% end %>
  <div class="px-2">

 <div class = 'container bg-primary py-3 '>
    <div class = 'card bg-primary border-white'>
      <div class = 'card-body text-center'>
      <span> <%= link_to "Add Category", new_category_path, method: :get, class:'text-light text-decoration-none fs-4' %></span>
   </div>
   </div>
    </div>
    <div class = 'container bg-danger py-3 mt-3'>
    <div class = 'card bg-danger border-white'>
   <div class = 'card-body text-center'>    
      <span>  <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-light fs-4 mb-2" %></span>  
   </div>
    </div>
  </div>
  
</div>
</section>