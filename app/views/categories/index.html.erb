<section class='categories_controllers'>
     <header class="input-container">
      <nav>
        <ul class='links'>
          <li>
            <i class="fa fa-bars"></i>
          </li>
          <li>
            TRANSACTIONS
          </li>
          <li>
            <i class="fa fa-search"></i>
          </li>
        </ul>
      </nav>
  </header>

 <section>

     <% if @categories.length > 0 %>
      <ul class="category-lists-wrapper">
          <% @categories.each do |category| %>
           <%= link_to category_path(category.id), method: :get do %> 
          <li>

            <div class='desc'>
              <%= image_tag(category.icon, class:'list_image') %>
              <span>
                <p><%= category.name %></p>
                <small><%= category.created_at.to_date.strftime("%d %b, %Y") %></small>
              </span>
            </div>
            <p class='strong'>$<%= category.businesses.sum(:amount) || '0.00'%></p>
          </li> 
          <% end %>
          <% end %>
      </ul>


   <% else %>
          <p>No Category Added yet</p> 
      <% end %>
  <div>
 <div class='category-footer'>
    <%= button_to "Add Category", new_category_path, method: :get, class: 'category-btn' %>
  </div>
  <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-warning mb-2" %>
</section>