<section class="categories_controllers">
  <header class="input-container">
    <nav>
      <ul class='links'>
        <li>
        <%= link_to categories_path do %>
          <i class="fa fa-arrow-left"></i>
          <% end %>
        </li>
        <li>
          DETAILS
        </li>
        <li>
          <i class="fa fa-bars"></i>
        </li>
      </ul>
    </nav>
  </header>
 <section class="category-lists-wrapper details ">
    <div class='desc'>
      <%= image_tag(@category.icon,class:'list_image') %>
      <span>
        <h2><%= @category.name %></h2>
      </span>
    </div>
    <hr>
    <div class='transaction'>
      <h3>Transaction 1</h3>
      <small>DateTime</small>
    </div>
    <hr>
    <div class='payment'>
      <h4>TOTAL PAYMENT</h4>
      <strong>$0.00</strong>
    </div>

    <%= button_to "Delete Category", category_path, method: :delete, class: 'category-btn' %>

  </section> 
</section>