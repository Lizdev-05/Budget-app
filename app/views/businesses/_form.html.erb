<%= form_with model: business, url: category_businesses_path, :html => {:class => 'form', :id => 'form' }  do |form| %>

    <div class="field">
          <%= form.collection_select(:category_ids, current_user.categories, :id, :name, {}, { multiple: true, class: "form-select" }) %>
    <div>
    <div>
        <%= form.label 'Spending name', class: 'fs-5 mb-2 mt-4' %>
        <%= form.text_field :name, autofocus: true, autocomplete: "name", class:'form-control', require: true%>
        <% business.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
            <% end %>
    </div>
    <div>
       <%= form.label :amount, class: 'fs-5 mb-2 mt-4' %>
        <%= form.text_field :amount, autofocus: true, autocomplete: "amount", class:'form-control mb-4', require: true%>
        <% business.errors.full_messages_for(:amount).each do |message| %>
        <div><%= message %></div>
         <% end %>
    </div>
    <div class="actions col-4 mx-auto mb-3">
        <%= form.submit "Add Spending", class: 'btn cat-color text-light mt-3' %>
    </div>

<%end%>